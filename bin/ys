#!/usr/bin/python2.7

from bs4 import BeautifulSoup
from prettytable import PrettyTable
import sys
import os
if sys.version_info[0] > 2:
    from urllib.parse import quote as urllib_quote
    from urllib.request import Request as urllib_request
    from urllib.request import urlopen as urllib_urlopen

else:
    import urllib2
    from urllib2 import quote as urllib_quote
    from urllib2 import Request as urllib_request
    from urllib2 import urlopen as urllib_urlopen



class color:
   PURPLE = '\033[95m'
   CYAN = '\033[96m'
   DARKCYAN = '\033[36m'
   BLUE = '\033[94m'
   GREEN = '\033[92m'
   YELLOW = '\033[93m'
   RED = '\033[91m'
   BOLD = '\033[1m'
   UNDERLINE = '\033[4m'
   END = '\033[0m'


def get_input():
    """Gets the input from user and formats it."""
    try:
        query = sys.argv[1:]
        movie_name = ' '.join(query[0:])
        return movie_name
    except Exception as e:
        print (e)
        exit()
    return query


def display(x):
    query = x.lower()
    quoted_query = urllib_quote(query)

    url = "https://www.youtube.com/results?search_query=" + quoted_query
    # url = "https://github.com/Afsalms/Youtube-Streamer"
    print(url)
    print("**************************")

    # add header
    headers = {
        'User-Agent': 'Mozilla/5.0 (Windows NT 6.3; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/54.0.2840.71 Safari/537.36'}

    # request = urllib_request(url, headers=headers)
    import requests
    r = requests.get(url)
    # data_file = urllib_urlopen(request)
    # data_html = data_file.read()
    # data_file.close()
    page = r.text

    # print(data_html)
    print("--------------------------------------")

    soup = BeautifulSoup(page, 'html.parser')

    title = []
    ref = []

    for h3 in soup.find_all("a", attrs={'class':'yt-uix-tile-link'}):
        print(h3.contents)
        print(dir(h3))
        print(h3.get("href"))
        print("-------------------")
        # print(h3.find('a'))
        # title.append(h3.find('a').contents[0])
        title.append(h3.contents[0])
        ref.append(h3.get("href"))
        # ref.append(h3.find('a')['href'])

    sequence = ["S.No", "Title"]

    t = PrettyTable(sequence)

    for i in range(0, len(title)):
        t.add_row([i+1, title[i]])

    if len(title) != 0:
        print(color.BOLD + color.CYAN + "\nResults : " + color.END)

        print(t)

        choice = raw_input(color.CYAN + color.BOLD + "\nEnter your choice (numerical) : " + color.END)

        if int(choice) >=1 and int(choice) <= len(title):
            video_url = "https://www.youtube.com" + str(ref[int(choice) - 1])
            # video_title = str(title[int(choice) - 1]) + str(".mp3")

            os.system("totem " + video_url)

        else:
            print("Invalid entry.")
            quit()

    else:
        print(color.BOLD + color.CYAN + "Sorry, no results found." + color.END)
        quit()


def main():
    x = get_input()
    display(x)

if __name__ == "__main__":
    main()